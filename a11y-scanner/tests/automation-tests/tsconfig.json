{
  "extends": "@a11y-scanner/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "mocha", "@wdio/globals/types"]
  },
  "include": [
    "src/**/*",
    "wdio.conf.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}