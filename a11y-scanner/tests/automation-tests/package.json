{
  "name": "@a11y-scanner/automation-tests",
  "version": "1.0.0",
  "description": "Appium + WebDriverIO automation tests for accessibility scanning",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.ts",
    "test:android": "wdio run wdio.conf.ts --suite android",
    "test:ios": "wdio run wdio.conf.ts --suite ios",
    "test:web": "wdio run wdio.conf.ts --suite web",
    "appium": "appium server --config appium.config.json",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf allure-results allure-report screenshots"
  },
  "dependencies": {
    "@a11y-scanner/shared": "workspace:*",
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "appium": "^2.2.1",
    "appium-uiautomator2-driver": "^2.34.1",
    "appium-xcuitest-driver": "^5.12.2",
    "axios": "^1.5.0",
    "sharp": "^0.32.6",
    "webdriverio": "^9.19.2"
  },
  "devDependencies": {
    "@a11y-scanner/config": "workspace:*",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@wdio/appium-service": "^9.19.2",
    "@wdio/globals": "^9.17.0",
    "@wdio/types": "^9.19.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "wdio-chromedriver-service": "^8.1.1"
  }
}